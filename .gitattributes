# Auto detect text files and perform LF normalization
* text=auto

# Source code - always LF
*.cs text eol=lf
*.csproj text eol=lf
*.sln text eol=lf
*.props text eol=lf
*.targets text eol=lf

# Configuration files
*.json text eol=lf
*.xml text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.editorconfig text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf

# Scripts
*.sh text eol=lf
*.ps1 text eol=crlf
*.bat text eol=crlf
*.cmd text eol=crlf

# Binary files - never normalize
*.flac binary
*.mp3 binary
*.ogg binary
*.wav binary
*.m4a binary
*.aac binary
*.wma binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.dll binary
*.exe binary
*.pdb binary
*.nupkg binary
*.snupkg binary
